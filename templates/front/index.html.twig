<title>Hello FrontController!</title>

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <nav class="navbar navbar-expand-lg text-black">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class=" text-black nav-link" href="{{ path("app_front") }}">Home </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">category</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">log-in</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">register</a>
                    </li>
                </ul>
            </div>
        </nav>
        <h2 class="text-center">bussfront</h2>
        <br>
        <br>
        <p class="text-center">Hallo, welkom bij bussfront <br>
            <br>
            Op deze site kan je allemaal soorten vervoersbussen verkopen
            <br>
            Kies een category
        </p>
        <br>
        <div class="container ">
            <div class="row justify-content-center">
                {% for categories in category %}

                    <div class="col-3">
                        <img class="img-fluid" src="{{ asset(categories.img) }}" alt="elec">
                        <div><p class="text-center"> {{ categories.name }} </p></div>
                        <br>
                        <a type="button" href=""  class=" w-100 btn btn-primary">klik</a>

                    </div>
                {% endfor %}
            </div>
        </div>
        <hr>
        <p class="text-center">
            Contact:
            <br>
            <br>
            bussfront@info.nl

        </p>

    </div>
{% endblock %}
