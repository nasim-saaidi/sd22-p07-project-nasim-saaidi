{% extends 'base.html.twig' %}


{% block body %}
    {% for label, messages in app.flashes %}
    {% for msg in messages %}
    <div class="alert alert-{{ label }}">
        {{ msg }}
    </div>
    {% endfor %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <p class="text-center">Hallo, welkom bij bussfront <br>
            <br>
            Op deze site kan je allemaal soorten vervoersbussen verkopen
            <br>
            Kies een category
        </p>
        <br>
        <div class="container ">
            <div class="row justify-content-center">
                {% for categories in category %}
                    <div class="col-3">
                        <img class="img-fluid" src="{{ asset(categories.img) }}" alt="elec">
                        <div><p class="text-center"> {{ categories.name }} </p></div>
                        <br>
                        <a type="button" href="{{ path("app_category", {"category": categories.id}) }}"  class=" w-100 btn btn-primary">klik</a>
                    </div>
                {% endfor %}
            </div>
        </div>
        <hr>
        <p class="text-center">
            Contact:
            <br>
            <br>
            bussfront@info.nl

        </p>

    </div>
{% endblock %}
